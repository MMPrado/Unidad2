<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="mx.edu.utng.mmacias.comentarios.MainActivityComentarios">

    <ImageView
        android:id="@+id/imv_imagen"
        android:layout_width="@dimen/size_widt"
        android:layout_height="@dimen/size_h"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_top"
        android:src="@drawable/josefa11" />


    <EditText
        android:id="@+id/et_comen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_sizes"
        android:hint="@string/escribe_un_comentario"
        android:textColor="@color/color"
        android:textSize="@dimen/text_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_comentario"
        android:background="@color/color_blue"
        android:text="@string/publicar_text"
        android:textColor="@color/color"
        android:textSize="@dimen/text_size"
        android:id="@+id/button" />



</RelativeLayout>
